<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/left_menu_profile_row_height"
    android:background="@drawable/left_menu_profile_backgroud"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_menu_profile_image_height"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/unknowavata"
            android:layout_marginLeft="@dimen/left_menu_left_padding"
            android:id="@+id/imgAvatar"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/btLogin"

            android:background="@null"

            android:elevation="20dp"
            android:textSize="@dimen/text_h2_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/llLogined"
        android:gravity="center_vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="10">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/left_menu_left_padding"
                android:textColor="#ffffff"
                android:text="Unknown User"
                android:textSize="@dimen/text_h2_size"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/left_menu_left_padding"
                android:layout_marginTop="5dp"
                android:text="unknown@gmail.com"
                android:textSize="@dimen/text_norm_size"
                android:textStyle="normal"

                />

        </LinearLayout>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btLogout"
            android:src="@drawable/ic_logout"
            android:layout_weight="0"
            android:scaleType="centerInside"
            android:background="@null"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp" />

    </LinearLayout>

</LinearLayout>