<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>

            <stroke
                android:width="1dp"
                android:color="#20f8f6" />
            <corners
                android:radius="3dp" /> // set to 0 or erase it for sharp corners

        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/mainColor" />
           <!-- <stroke
                android:width="1dp"
                android:color="#992f2f" />-->
            <corners
                android:radius="3dp" />

        </shape>
    </item>
</selector>